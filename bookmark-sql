
DROP TABLE IF EXISTS bookmarks;


CREATE TABLE bookmarks (
	id INTEGER PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
	title varchar(30),
	url text,
	description text,
	rating integer
);


INSERT INTO bookmarks (title, url, description, rating)
VALUES
	('Google', 'https://google.com', 'Search for stuff', 5),
